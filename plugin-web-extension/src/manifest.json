{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "name": "Save my Chatbot - AI Conversation Exporter",
  "description": "ðŸš€ Export your Phind, Perplexity and MaxAI-Google search threads into markdown files!",
  "icons": {
    "16": "files/icons/icon-16.png",
    "32": "files/icons/icon-48.png",
    "48": "files/icons/icon-48.png",
    "96": "files/icons/icon-128.png",
    "128": "files/icons/icon-128.png"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "{{chrome}}.host_permissions": [
    "*://*.phind.com/*",
    "*://*.perplexity.ai/*",
    "*://google.com/search*"
  ],
  "{{chrome}}.action": {
    "default_popup": "src/pages/options.html",
    "default_icon": {
      "16": "files/icons/icon_disabled-500.png",
      "48": "files/icons/icon_disabled-500.png",
      "128": "files/icons/icon_disabled-500.png"
    }
  },
  "{{firefox}}.browser_action": {
    "default_popup": "src/pages/options.html",
    "default_icon": {
      "16": "files/icons/icon_disabled-500.png",
      "48": "files/icons/icon_disabled-500.png",
      "128": "files/icons/icon_disabled-500.png"
    }
  },
  "background": {
    "{{chrome}}.service_worker": "src/background.ts",
    "{{firefox}}.scripts": [
      "src/background.ts"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.phind.com/*",
        "*://*.perplexity.ai/*",
        "*://*.google.com/search*"
      ],
      "js": [
        "src/tab.ts"
      ]
    }
  ],
  "{{chrome}}.web_accessible_resources": [
    {
      "resources": [
        "files/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "{{firefox}}.web_accessible_resources": [
    "files/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "example@extension.com",
      "strict_min_version": "109.0"
    }
  }
}
